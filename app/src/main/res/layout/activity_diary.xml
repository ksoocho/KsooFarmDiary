<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/dateTextDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재일"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/dateInfoTextDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜정보"
            android:textSize="18dp"
            android:padding="10dp"
            android:gravity="end"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/planTextDiary"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#22F51F8B"
            android:lines="10"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:textSize="12dp" />

    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/activityTextDiary"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#221fcef5"
            android:lines="10"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:textSize="12dp" />

    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/memoTextDiary"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#22bcf51f"
            android:lines="10"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:textSize="12dp" />

    </ScrollView>

</LinearLayout>